<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link rel="icon" href="img/favicon.png" type="image/png" />
  <title>Gadgets.store</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.css" />
  <link rel="stylesheet" href="vendors/linericon/style.css" />
  <link rel="stylesheet" href="css/font-awesome.min.css" />
  <link rel="stylesheet" href="css/themify-icons.css" />
  <link rel="stylesheet" href="css/flaticon.css" />
  <link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css" />
  <link rel="stylesheet" href="vendors/lightbox/simpleLightbox.css" />
  <link rel="stylesheet" href="vendors/nice-select/css/nice-select.css" />
  <link rel="stylesheet" href="vendors/animate-css/animate.css" />
  <link rel="stylesheet" href="vendors/jquery-ui/jquery-ui.css" />
  <!-- main css -->
  <link rel="stylesheet" href="css/style.css" />
  <link rel="stylesheet" href="css/responsive.css" />
</head>

<body>
  <!--================Header Menu Area =================-->
  <%-include("../partials/header") %>

 
  <!--================Header Menu Area =================-->

  <!--================Home Banner Area =================-->
  <section class="home_banner_area mb-40">
    <div class="banner_inner d-flex align-items-center">
      <div class="container">
        <div class="banner_content">
          <div >
            <p class="sub text-uppercase">Gadgets Big Collection</p>
            <h3><span>Get</span> Your <br />Favorite <span>Gadgets</span></h3>
            <h4>Hurry up Select Your Items</h4>
            <a class="main_btn sb mt-40" href="/shop">View Collection</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================End Home Banner Area =================-->

  <!-- Start feature Area -->
  <section class="feature-area section_gap_bottom_custom">
    <div class="container">
      <div class="row">
       
        <div class="col-lg-2 col-md-6">
          <div class="single-feature">
            <a href="/shop?sort=headphone" class="title">
              <img src="https://static.toiimg.com/thumb/msid-81267766,imgsize-162251,width-400,resizemode-4/81267766.jpg" alt="" class="categoryIcons">
              <h3>Earphones</h3>
            </a>
          </div>
        </div>

      
        <div class="col-lg-2 col-md-6">
          <div class="single-feature">
            <a href="/shop?sort=smartphone" class="title">
              <img src="https://www.guidingtech.com/wp-content/uploads/Best-Wallpaper-Apps-for-iPhone.jpeg" alt="" class="categoryIcons">
              <h3>Smart Phones</h3>
            </a>
          </div>
        </div>

        <div class="col-lg-2 col-md-6">
          <div class="single-feature">
            <a href="/shop?sort=laptop" class="title">
              <img src="https://www.parallels.com/static/pl/fileadmin/res/img/homepage/2022/hero_xs.jpg" alt="" class="categoryIcons">
              <h3>Laptops</h3>
            </a>
          </div>
        </div>
        <div class="col-lg-2 col-md-6">
          <div class="single-feature">
            <a href="/shop?sort=tab" class="title">
              <img src="https://www.washingtonpost.com/resizer/fg1mribUWgzAxcJY70JaLo65hZI=/arc-anglerfish-washpost-prod-washpost/public/GAUG7LYJPRELXM5UYB4K626KQI.jpg" alt="" class="categoryIcons">
              <h3>Tablets</h3>
            </a>
          </div>
        </div>
        <div class="col-lg-2 col-md-6">
          <div class="single-feature">
            <a href="/shop?sort=smartwatch" class="title">
              <img src="https://images.cnbctv18.com/wp-content/uploads/2019/09/2019-09-10T175338Z_1_LYNXNPEF891T6_RTROPTP_4_APPLE-IPHONE-1-768x512.jpg" alt="" class="categoryIcons">
              <h3>Smart Watches</h3>
            </a>
          </div>
        </div>
        <div class="col-lg-2 col-md-6">
          <div class="single-feature">
            <a href="/shop?sort=tv" class="title">
              <img src="https://www.notebookcheck.net/fileadmin/Notebooks/News/_nc3/Samsung_S95B.jpg" alt="" class="categoryIcons">
              <h3>TV</h3>
            </a>
          </div>
        </div>


      </div>
    </div>
  </section>
  <!-- End feature Area -->


  <!--================ End Feature Product Area =================-->

  <!--================ Offer Area =================-->
  <section class="offer_area">
    <div class="container">
      <div class="carousel-inner">
        <% offer.forEach((item=>{ %>
          <a href="<%=item.url  %> " class="carousel-item active">
            <img src="<%=item.image.url%>" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
           
            </div>
          </a>
        <% })) %> 
  
      </div>
    </div>
  </section>
  <!--================ End Offer Area =================-->

  <!--================ Inspired Product Area =================-->
  <section class="inspired_product_area section_gap_bottom_custom mt-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="main_title">
            <h2><span>Recommended Prodducts</span></h2>
            <p>Bring Your Favorite Product From Your Favorite App</p>
          </div>
        </div>
      </div>

      <div class="row">
        <%products.forEach(item=>{%>
          <a href="/product-info/<%=item._id%>">
        <div class="col-lg-3 col-md-6">
          <div class="single-product">
            <div class="product-img">
              <img class="img-fluid w-100" src="<%= item.mainImage.url%>" alt="" />
              <div class="p_icon">
                <a href="#">
                  <i class="ti-eye"></i>
                </a>
                <a href="#">
                  <i class="ti-heart"></i>
                </a>
                <a href="#">
                  <i class="ti-shopping-cart"></i>
                </a>
              </div>
            </div>
            <div class="product-btm">
              <a href="#" class="d-block">
                <h4><%=item.productName %></h4>
              </a>
              <div class="mt-3">
                <span class="mr-4"><%=item.price %>â‚¹.</span>
                <del><%=item.MRP%></del>
              </div>
            </div>
          </div>
        </div>
      </a>
        <% }) %>

    
      </div>
    </div>
  </section>
  <!--================ End Inspired Product Area =================-->

  <!--================ End footer Area  =================-->

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="js/jquery-3.2.1.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/stellar.js"></script>
  <script src="vendors/lightbox/simpleLightbox.min.js"></script>
  <script src="vendors/nice-select/js/jquery.nice-select.min.js"></script>
  <script src="vendors/isotope/imagesloaded.pkgd.min.js"></script>
  <script src="vendors/isotope/isotope-min.js"></script>
  <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
  <script src="js/jquery.ajaxchimp.min.js"></script>
  <script src="vendors/counter-up/jquery.waypoints.min.js"></script>
  <script src="vendors/counter-up/jquery.counterup.js"></script>
  <script src="js/mail-script.js"></script>
  <script src="js/theme.js"></script>
</body>

</html>