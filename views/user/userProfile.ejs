<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/img/AppIcon.webp" type="image/x-icon">
    <title>Gadgets.store</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="vendors/linericon/style.css" />
    <link rel="stylesheet" href="css/font-awesome.min.css" />
    <link rel="stylesheet" href="css/themify-icons.css" />
    <link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="vendors/lightbox/simpleLightbox.css" />
    <link rel="stylesheet" href="vendors/nice-select/css/nice-select.css" />
    <link rel="stylesheet" href="vendors/animate-css/animate.css" />
    <link rel="stylesheet" href="vendors/jquery-ui/jquery-ui.css" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <!-- main css -->
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/responsive.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <%-include("../partials/header")%>
    <section>
        <div class="container py-5">
       
      
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src="/img/profile.png" alt=""
                    class="rounded-circle img-fluid" style="width: 150px;">
                  <h5 class="my-3"><%=user.name %></h5>
                  <div class="d-flex justify-content-center mb-2">
                  
                   
                  </div>
                </div>
              </div>
              <div class="card mb-4 mb-lg-0">
                <div class="card-body p-0">
                  <ul class="list-group list-group-flush rounded-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                       <i class="ti-heart" aria-hidden="true"></i>
                      <a href="/wishlist" style="text-decoration:none;" class="mb-0">Wish List</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <i class="ti-shopping-cart"></i>
                      <a href="/cart" style="text-decoration:none;" class="mb-0">Cart</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="ri-coupon-3-line"></i>
                      <a href="/user-coupons" style="text-decoration:none;" class="mb-0">Coupons</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <i class="ri-history-line"></i>
                      <a href="/order-history" style="text-decoration:none;"  class="mb-0">Order History</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="ri-wallet-3-line"></i>
                      wallet
                      â‚¹<%=user.wallet%>
                    
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">

                        <a href="/logout" type="button" class="btn btn-dark w-100" style="background-color: rgb(8, 8, 71);">Log Out</a>
                    </li>
                   
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">User Name</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=user.name%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Mail Id</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=user.email%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=user.phoneNumber%></p>
                    </div>
                  </div>
                  <hr>
               
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Add Address</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0">
                        <a href="/add-address" style="text-decoration: none;font-size: 20px;"><i class="ri-add-line"></i></a></i></p>
                    </div>
                  </div>
                  <hr>
                  <%address.address.forEach(item=>{%>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Address</p>
                    </div>
                    <div class="col-sm-5">
                      <p class="text-muted mb-0"><%=item.address %></p>
                      <p class="text-muted mb-0"><%=item.pincode %></p>
                      <p class="text-muted mb-0"><%=item.locality%>,<%=item.city%>,<%=item.state%></p>
                    </div>
                    <div class="col-sm-2">
                        <a href="/edit-address/<%=item.id%>" style="text-decoration: none;font-size: 20px;"><i class="ri-edit-line"></i></a></p>
                    </div>
                    <div class="col-sm-2">
                        <a href="/delete-address/<%=item.id%>" style="text-decoration: none;font-size: 20px;"><i class="ri-delete-bin-line"></i></a></p>
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </section>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>