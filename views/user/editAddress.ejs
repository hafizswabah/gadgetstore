<body>
    <%-include("../partials/header")%>
 
    <div class="ms-5">
        <h2 style="font-family: auto;">Edit Address </h2>
      
       </div>
    
    <div class="add-main" >
        <div class="container h-100 d-flex justify-content-center align-items-center">
            <form class=" mt-5 border p-1 address-form"  style="border-radius:10px ; width:75% ; background-color:white"
            action="/edit-address" method="post">
             <div class="d-flex">
               <div class="col-6 p-2">
                 <label for="exampleInputEmail1" class="form-label">Name</label>
                 <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userName" value="<%=found.userName%>">
               </div>
       
       
       
               <div class="col-6 p-2">
                 <label for="exampleInputEmail1" class="form-label">Mobile</label>
                 <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="phoneNumber" value="<%=found.phoneNumber%>">
               </div>
       
             </div>
             <div class="d-flex">
               <div class="col-6 p-2">
                 <label for="exampleInputEmail1" class="form-label">Locality</label>
                 <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="locality" value="<%=found.locality%>">
               </div>
               <div class="col-6 p-2">
                 <label for="exampleInputEmail1" class="form-label">pincode</label>
                 <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="pincode" value="<%=found.pincode%>">
               </div>
             </div>
             <div class="d-flex">
       
               <div class="form-floating col-12 p-2">
                 <textarea name="address"  class="form-control" placeholder="address" id="floatingTextarea2" style="height: 100px"><%=found.address%></textarea>
                 <label for="floatingTextarea2">Address</label>
               </div>
       
             </div>
             <div class="d-flex">
               <div class="col-6 p-2">
                 <label for="exampleInputEmail1" class="form-label">City/Town/District</label>
                 <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="city" value="<%=found.city%>">
               </div>
               <div class="col-6 p-2">
                 <label for="exampleInputEmail1" class="form-label">State</label>
                 <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="state" value="<%=found.state%>">
               </div>
               <input type="text" class="form-control" style="visibility: hidden;" id="exampleInputEmail1" aria-describedby="emailHelp" name="id" value="<%=found.id%>">
             </div>
             <button type="submit" class="btn btn-dark w-100 mt-4" style="background-color: rgba(11, 11, 54, 0.822);">Edit Address</button>
           </form>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>