<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/login.css">
  <link rel="shortcut icon" href="/img/AppIcon.webp" type="image/x-icon">
  <title>Gadgets.store</title>
</head>

<body>
  <div id="container" class="container sign-in">
    <!-- FORM SECTION -->
    <div class="row">
      <!-- SIGN UP -->
      <div class="col align-items-center flex-col sign-up">
       

      </div>
      <!-- END SIGN UP -->
      <!-- SIGN IN -->
      <div class="col align-items-center flex-col sign-in">
        <div class="form-wrapper align-items-center">
          <form id="otpForm" class="form sign-in">
            <div class="input-group">
              <h2>Enter Mail ID</h2>
            </div>
            <div class="input-group">
              <i class='bx bxs-user'></i>
              <input type="email" name="email" id="email" placeholder="Enter Your Email for OTP verification">
            </div>
           
            <div class="input-group">
              <b class="text-danger" id="otpMessage"></b>
            </div>
            <button type="submit">
              Submit
            </button>
            <p>
              <b>
                We Send an OTP to Your Mail ID ''
              </b>
            </p>
            <p>
              <span>
           
              </span>
             
            </p>
          </form>
        </div>
        <div class="form-wrapper">

        </div>
      </div>
      <!-- END SIGN IN -->
    </div>
    <!-- END FORM SECTION -->
    <!-- CONTENT SECTION -->
    <div class="row content-row">
      <!-- SIGN IN CONTENT -->
      <div class="col align-items-center flex-col">
        <div class="text sign-in">
          <h2>
        Forgot Password 
          </h2>
          

        </div>
        <div class="img sign-in">

        </div>
      </div>
      <!-- END SIGN IN CONTENT -->
      <!-- SIGN UP CONTENT -->

      <!-- END SIGN UP CONTENT -->
    </div>
    <!-- END CONTENT SECTION -->
  </div>
</body>
<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
<script>

  let otpForm = document.getElementById('otpForm');
  let otpMessage = document.getElementById('otpMessage')
  otpForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    let res = await axios.post('/forget', {
      email: document.getElementById('email').value,
    
    })

    if (res.data.error) {
      otpMessage.innerText = res.data.message;
    } else {
      window.location.href = '/otp-page-forgot'
    }
  })

</script>

</html>