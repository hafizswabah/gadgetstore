    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/prooduct.css">
    <link rel="stylesheet" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="/css/admin/cart.css">
    <link rel="stylesheet" href="/css/admin/whishlist.css">
    <link rel="stylesheet" href="/css/admin/checkout.css">
    <link rel="stylesheet" href="/css/admin/order.css">
    <link rel="stylesheet" href="/css/admin/salesreport.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
    <style>
      .splide__slide img {
    width: 100%;
    height: auto;
  }
    </style>
</head>
<body>
<%- include('../partials/adminHeader')  %> 



  <div class="add-main" style="min-height: 100vh;">
    <div class="container h-100 d-flex justify-content-center align-items-center">
      <form class=" mt-5 border p-5 " enctype="multipart/form-data" style="border-radius:10px ; width:75% ; background-color:rgb(215, 215, 215) ;" action="/admin/edit-product" method="post" >
        <input type="text" class="form-control" id="exampleInputEmail1" value="<%= _id %>" style="height:0px; visibility:hidden" aria-describedby="emailHelp" name="_id">
        <div class="d-flex">
          <div class="col-6 p-2">
            <label for="exampleInputEmail1" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="exampleInputEmail1" value="<%= product.productName  %>" aria-describedby="emailHelp" name="productName">
          </div>
          <div class="col-6 p-2">
            <label for="exampleInputEmail1" class="form-label">Category</label>
            <div>
              <select name="category" id="" style="height:40px ;width: 415px; border-radius:5px ; background-color: white;">
                <% category.forEach((item)=>{ %>
                <option value="<%= item.category%>"><%=item.category %> </option>
                <% })  %>
              </select>
            </div>
          </div>
        </div>
     
        <div class="d-flex">
          <div class="col-6 p-2">
            <label for="exampleInputEmail1" class="form-label">Quantity</label>
            <input type="tex" class="form-control" id="exampleInputEmail1" value="<%= product.quantity  %> "  aria-describedby="emailHelp" name="quantity">
          </div>
          <div class="col-6 p-2">
            <label for="exampleInputEmail1" class="form-label">Description</label>
            <input type="text" class="form-control" id="exampleInputEmail1" value="<%= product.description %> "  aria-describedby="emailHelp" name="description">
          </div>
        </div>
        <div class="d-flex">
          <div class="col-4 p-2">
            <label for="exampleInputEmail1" class="form-label">Brand</label>
            <input type="text" class="form-control" id="exampleInputEmail1" value="<%= product.brand  %>"  aria-describedby="emailHelp" name="brand">
          </div>
          <div class="col-4 p-2">
            <label for="exampleInputEmail1" class="form-label">price</label>
            <input type="text" class="form-control" id="exampleInputEmail1" value="<%= product.price  %>"  aria-describedby="emailHelp" name="price">
          </div>
          <div class="col-4 p-2">
            <label for="exampleInputEmail1" class="form-label">MRP</label>
            <input type="text" class="form-control" id="exampleInputEmail1" value="<%= product.MRP  %>"  aria-describedby="emailHelp" name="MRP">
          </div>
        </div>
        <div class="d-flex">
          <div class="col-6 p-2 w-100" >
            <label for="exampleInputEmail1" class="form-label"> Main Image</label>
            <input type="file" class="form-control" accept="/image*" id="exampleInputEmail1" aria-describedby="emailHelp" name="mainImage">
          </div>
         
        </div>
        
        <div class="d-flex">
          <div class="col-6 p-2 w-100" >
            <label for="exampleInputEmail1" class="form-label">Sub Image</label>
            <input type="file" class="form-control" accept="/image*" id="exampleInputEmail1" aria-describedby="emailHelp" name="subImage" multiple>
          </div>
         
        </div>
        
        
        <button  type="submit" class="btn btn-dark w-100 mt-4">Edit Product</button>
      </form>
    </div>
  </div>

    
  </body>
  </html>