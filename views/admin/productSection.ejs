

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/prooduct.css">
    <link rel="stylesheet" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="/css/admin/cart.css">
    <link rel="stylesheet" href="/css/admin/whishlist.css">
    <link rel="stylesheet" href="/css/admin/checkout.css">
    <link rel="stylesheet" href="/css/admin/order.css">
    <link rel="stylesheet" href="/css/admin/salesreport.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
    <style>
      .splide__slide img {
    width: 100%;
    height: auto;
  }
    </style>
</head>
<body>
<%- include('../partials/adminHeader')  %> 

<div class="container-fluid ">
  <div class="row">

    <div class="col-md-3 col-lg-2 d-none d-md-flex">
      <%- include('../partials/adminSidebar')  %> 
       </div>

 <div class="col-md-9 col-lg-10 col-12"
  style="background-color: white; min-height: 100vh;">
      <div class="d-flex" >
        <div class="d-flex" style="gap:20px ; margin-bottom: 80px; margin-top: 50px; ">
          <h2>Product</h2>
          <form action="/admin/Search" method="post">
            <div class="searchbox" style="border:1px solid grey ; display: flex; align-items: center; border-radius:10px ;padding: 0px 10px;">
              <input type="text" placeholder="Search for product" style="border:none ; outline: none;" name="name">
              <i class="ri-search-2-line" style="font-size:25px ;"></i>
            </div>
          </form>
        </div>
       <a href="/admin/add" class="addproduct btn btn-dark text-white " style="height: 40px; width: 150px; ; margin-left: 800px;
        margin-top:70px ;">Add Product </a>
      </div>
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>NO</th>
              <th>Image</th>
              <th>Product</th>
              <th>Brand</th>
              <th>category</th>
              <th>Quantity</th>
              <th>price</th>
              <th>Description</th>
              <th>Status</th>
              <th>Action</th>
  
            </tr>
            <% products.forEach((item, index)=>{%> 
            <tr>
              <th><%= index+1 %> </th>
              <th><img src="/products/<%= item.mainImage%>" style="max-height:100px;max-width:90px ;" alt=""></th>
              <th><%= item.productName %> </th>
              <th><%= item.brand %> </th>
              <th><%= item.category %> </th>
              <th><%= item.quantity  %> </th>
              <th><%= item.price  %> </th>
              <th><%= item.description %> </th>
              <th>
                <% if(item.status==true){ %> Listed 
                  <% } else { %> unlisted
                    <% } %> 
              </th>
         
              <th>
                <div class="btn-group">
                  <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Action
                  </button>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/admin/edit-product/<%=item._id  %>">Edit</a></li>
                    <li><a class="dropdown-item" href="/admin/list-product/<%=item._id  %>">List</a></li>
                    <li><a class="dropdown-item" href="/admin/unlist-product/<%=item._id  %>">Unlist</a></li>
                  </ul>
                </div>
              </th>
  
            </tr>
            <% })  %> 
          </tbody>
    </div>
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  
    </body>
    </html>