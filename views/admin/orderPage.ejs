

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CARTER</title>
    <link rel="stylesheet" href="/css/admin/sidebar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">  
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/prooduct.css">
    <link rel="stylesheet" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="/css/admin/cart.css">
    <link rel="stylesheet" href="/css/admin/whishlist.css">
    <link rel="stylesheet" href="/css/admin/checkout.css">
    <link rel="stylesheet" href="/css/admin/order.css">
    <link rel="stylesheet" href="/css/admin/salesreport.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
    <style>
      .splide__slide img {
    width: 100%;
    height: auto;
  }
    </style>
</head>
<body>
<%- include('../partials/adminHeader')  %> 


<div class="container-fluid ">
  <div class="row">

    <div class="col-md-3 col-lg-2 d-none d-md-flex">
      <%- include('../partials/adminSidebar')  %> 
       </div>

    <div class="col-md-9 col-lg-10 col-12" style="background-color: white; min-height:100vh;">
      <div class="d-flex" >
        <div class="d-flex" style="gap:20px ; margin-bottom: 80px; margin-top: 50px; ">
          <h2>Order Details</h2>
         
        </div>
     
      </div>
        <table class="table table-striped" style="background-color:white;">
          <tbody>
            <tr>
              <th>NO</th>
              <th>User Name</th>
              <th>Product</th>
              <th>payment</th>
              <th>status</th>
              <th>Quantity</th>
              <th>price</th>
             
  
            </tr>
            <%orders.forEach((item,index)=>{%>
            <tr>
              <td><%=index+1%></td>
              <td><%=item.address.userName%></td>
              <th><%=item.product.productName%></th>
              <td><%=item.paymentType%></td>
              <td class="order-status">
                 <form action="/admin/edit-order-status/<%=item._id%>" method="post" >
                  <input type="text" value="<%=item._id%>" class="item-id-hidden" name="id">
                <select name="orderStatus"  id="" class="orderStatus" onchange="this.form.submit()">
                  <option value="pending" <% if(item.orderStatus=="pending"){ %>selected <% } %>>Pending</option>
                  <option value="delivered" <% if(item.orderStatus=="delivered"){ %>selected <% } %>>Delivered</option>
                  <option value="outForDelivery" <% if(item.orderStatus=="outForDelivery"){ %>selected <% } %>>Out For Delivery</option>
                  <option value="outForDelivery" <% if(item.orderStatus=="cancelled"){ %>selected <% } %>>cancle</option>
                  <option value="outForDelivery" <% if(item.orderStatus=="Return Proccessing"){ %>selected <% } %>>Return</option>
                </select>
              </form>
            </td>
              <td><%=item.quantity%></td>
              <td><%=item.total%></td>
           

            </tr>
            <%})%>
           
          </tbody>
    </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>